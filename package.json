{
  "name": "relp-core-plataform",
  "version": "1.0.0",
  "description": "RELP Core Plataform",
  "main": "serverless.ts",
  "scripts": {
    "start": "npx nodemon --exec npm run offline",
    "offline": "npx sls offline start --host 0.0.0.0  --reloadHandler --ignoreJWTSignature",
    "compose": "docker-compose up",
    "test": "IS_OFFLINE=true npx jest --collect-coverage",
    "test:watch": "IS_OFFLINE=true npx jest --watch-all",
    "deploy:dev": "serverless deploy --stage dev --aws-profile default"
  },
  "engines": {
    "node": ">=18.16.0"
  },
  "dependencies": {
    "@aws-sdk/client-s3": "^3.388.0",
    "@aws-sdk/client-secrets-manager": "^3.389.0",
    "@aws-sdk/client-ssm": "^3.388.0",
    "@middy/core": "^3.4.0",
    "@middy/http-json-body-parser": "^3.4.0"
  },
  "devDependencies": {
    "@babel/preset-env": "^7.22.10",
    "@babel/preset-typescript": "^7.22.5",
    "@jest/globals": "^29.6.2",
    "@serverless/typescript": "^3.30.1",
    "@types/aws-lambda": "^8.10.119",
    "@types/node": "^18.16.0",
    "dotenv": "^16.3.1",
    "esbuild": "^0.17.19",
    "nodemon": "^3.0.1",
    "serverless": "^3.34.0",
    "serverless-esbuild": "^1.46.0",
    "serverless-offline": "^12.0.4",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.1.6"
  }
}
