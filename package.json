{
  "name": "relp-core-plataform",
  "version": "1.0.0",
  "description": "RELP Core Plataform",
  "main": "serverless.ts",
  "scripts": {
    "start": "npx nodemon --exec npm run offline",
    "offline": "npx sls offline start --host 0.0.0.0  --reloadHandler --ignoreJWTSignature",
    "compose": "docker-compose up",
    "test": "IS_OFFLINE=true npx jest --collect-coverage",
    "test:watch": "IS_OFFLINE=true npx jest --watch-all",
    "deploy:dev": "serverless deploy --stage dev --aws-profile default",
    "connect:db:open": "chmod 400 ./config/db/* && ssh -f -N -i ./config/db/bastion-host.pem ec2-user@ec2-44-215-68-134.compute-1.amazonaws.com -L 2345:relp-db.cuny8vt4qt11.us-east-1.rds.amazonaws.com:5432",
    "connect:db:close": "pkill -f \"ssh -f -N -i ./config/db/bastion-host.pem ec2-user@ec2-44-215-68-134.compute-1.amazonaws.com -L 2345:relp-db.cuny8vt4qt11.us-east-1.rds.amazonaws.com:5432\""
  },
  "engines": {
    "node": ">=18.16.0"
  },
  "dependencies": {
    "@aws-sdk/client-s3": "^3.470.0",
    "@aws-sdk/client-secrets-manager": "^3.470.0",
    "@aws-sdk/client-ssm": "^3.470.0",
    "@aws-sdk/s3-request-presigner": "^3.474.0",
    "@middy/core": "^5.1.0",
    "@middy/http-json-body-parser": "^5.1.0",
    "json-schema-to-ts": "^2.9.2",
    "pg": "^8.11.3",
    "pg-hstore": "^2.3.4",
    "sequelize": "^6.35.2",
    "serverless-plugin-log-retention": "^2.0.0",
    "yup": "^1.3.2"
  },
  "devDependencies": {
    "@babel/preset-env": "^7.23.6",
    "@babel/preset-typescript": "^7.23.3",
    "@jest/globals": "^29.7.0",
    "@rocketseat/eslint-config": "^2.1.0",
    "@serverless/typescript": "^3.38.0",
    "@types/aws-lambda": "^8.10.130",
    "@types/node": "^18.16.0",
    "dotenv": "^16.3.1",
    "esbuild": "^0.19.9",
    "eslint": "^8.55.0",
    "jest": "^29.7.0",
    "nodemon": "^3.0.2",
    "serverless": "^3.38.0",
    "serverless-esbuild": "^1.50.0",
    "serverless-offline": "^13.3.1",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.3.3"
  }
}